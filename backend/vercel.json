{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "你的MongoDB连接字符串",
    "JWT_SECRET": "你的JWT密钥",
    "NODE_ENV": "production",
    "CLIENT_URL": "你的前端域名"
  }
} 